<Hoc>
  <div class="product {{if this.isZoomed 'zoomed'}}">
    <Product::Image @img={{this.ProductImage}} @togleZoom={{this.toggleZoomHandler}}/>
    <Product::Details @isDetails={{true}} @name={{this.model.name}} @price={{this.model.price}} @colors={{this.model.colors}} @color={{this.color}} @onChangeHandler={{this.onChangeHandler}}/>
  </div>
  <h5 class="mt-5">Features</h5>
  <ul>
    {{#each this.model.features as |feature|}}
      <li>{{feature}}</li>
    {{/each}}
  </ul>
</Hoc>