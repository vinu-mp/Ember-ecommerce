<main class="container mt-5">
  <h1>Shopping cart</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <LinkTo @route="index">
        Home
      </LinkTo>
    </li>
    <li class="breadcrumb-item">Shopping cart</li>
  </ol>
  {{#each this.shoppingCart.items as |item|}}
    {{log 'retriggereed'}}
    <div class="cart-item d-flex align-items-center">
      <div class="cart-item-thumbnail">
        <img src="{{item.image}}" alt="thumbnail">
      </div>
      <div class="ml-3">
        <h4>{{item.name}}</h4>
        <i class="fw-bold">{{currency item.price}}</i>
      </div>
      <input type="number" value={{item.count}} class="ml-auto" {{on "input" (fn this.updateInput item)}}>
    </div>
  {{/each}}
  <section class="ml-auto w-50 text-right mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{currency this.subtotal sign="$"}}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{currency this.tax}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{currency this.total}}</span>
    </div>
  </section>
  <button type="button" class="btn btn-success float-right">Checkout</button>
</main>