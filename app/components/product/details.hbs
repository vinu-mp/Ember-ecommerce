<div class="product-details">
  <section>
    <h3>{{@name}}</h3>
    <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half-o"></i>
    </div>
  </section>
  <section class={{unless @isDetails 'h4'}}>
    <del class="small text-black-50">{{currency @price.original}}</del>
    <i class="text-danger font-weight-blod">{{currency @price.current}}</i>
  </section>
  {{#if @isDetails}}
    <div class="d-flex justify-content-between align-items-center mt-3">
      <div class="product-colors d-flex active-{{@color}}">
        {{#each @colors as |colorInfo|}}
          <span class="product-color color-{{colorInfo.color}}"
        {{on "click" (fn @onChangeHandler colorInfo.color)}}></span>
        {{/each}}
      </div>
      <button class="btn btn-info" type="button" {{on "click" this.addToCart}}>
        <i class="fa fa-shopping-cart ml-1"></i>
        Add to cart
      </button>
    </div>
  {{/if}}

</div>